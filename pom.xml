<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.zhoukai</groupId>
    <artifactId>spider2</artifactId>
    <packaging>jar</packaging>
    <version>2</version>
    <properties>
        <mainClass>com.spider.Main</mainClass>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <deploy_version>1</deploy_version>

        <show_brower>0</show_brower>
        <pool_maxactive>1</pool_maxactive>
        <max_thread_count>1</max_thread_count>
        <proxy_switch>0</proxy_switch>
        <config_root>sites</config_root>
        <subscribe_url>http://localhost:7001/</subscribe_url>
        <remote_properties>classpath:conf/remote.properties</remote_properties>

    </properties>
    <profiles>
        <profile>
            <id>dev</id>
            <properties>
                <log4j.level>error</log4j.level>
                <subscribe_url>http://xxxx/</subscribe_url>
                <show_brower>1</show_brower>
            </properties>
        </profile>
        <profile>
            <id>prd1</id>
            <properties>
                <log4j.level>error</log4j.level>
                <subscribe_url>http://xxxx/</subscribe_url>
                <pool_maxactive>500</pool_maxactive>
                <max_thread_count>500</max_thread_count>
                <proxy_switch>1</proxy_switch>
                <remote_properties>file:conf/remote.properties</remote_properties>
            </properties>
        </profile>
        <profile>
            <id>prd0</id>
            <properties>
                <log4j.level>error</log4j.level>
                <subscribe_url>http://xxxx/</subscribe_url>
                <pool_maxactive>500</pool_maxactive>
                <max_thread_count>500</max_thread_count>
                <proxy_switch>1</proxy_switch>
                <remote_properties>file:conf/remote.properties</remote_properties>
            </properties>
        </profile>
        <profile>
            <id>debug</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <proxy_switch>0</proxy_switch>
                <log4j.level>info</log4j.level>
                <config_root>jar\\spider2\\src\\main\\resources\\sites</config_root>
            </properties>
        </profile>
    </profiles>
